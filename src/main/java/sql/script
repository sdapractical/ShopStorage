package sql;

DROP SCHEMA IF EXISTS shopStorage;
        CREATE SCHEMA `shopStorage`;
        USE `shopStorage`;

CREATE TABLE IF NOT EXISTS `shopStorage`.`category`(
        `id` BIGINT(20) NOT NULL AUTO_INCREMENT,
        `name` VARCHAR(255) NOT NULL DEFAULT 'Unknown' UNIQUE,
        PRIMARY KEY (`id`))
        AUTO_INCREMENT = 1;

CREATE TABLE IF NOT EXISTS `shopStorage`.`product`(
        `id` BIGINT(20) NOT NULL AUTO_INCREMENT,
        `name` VARCHAR(255) NOT NULL DEFAULT 'Unknown',
        `manufacturer` VARCHAR(500) NULL DEFAULT NULL,
        `quantity` BIGINT(20) NULL DEFAULT NULL,
        `date` DATE NULL DEFAULT NULL,
        `price` NUMBER(100,2) NULL DEFAULT NULL,
        `completed` BOOLEAN NOT NULL DEFAULT FALSE,
        PRIMARY KEY (`id`)),
        CONSTRAINT `fk_category` FOREIGN KEY (`category_id`) REFERENCES `category` (`id`) ON DELETE SET NULL)
        AUTO_INCREMENT = 1;